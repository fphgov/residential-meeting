{
    "name": "fphgov/participatory",
    "description": "Participatory Budget",
    "type": "project",
    "config": {
        "sort-packages": true,
        "preferred-install": "source"
    },
    "minimum-stability": "stable",
    "extra": {
        "laminas": {
            "component-whitelist": [
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "laminas/laminas-httphandlerrunner",
                "mezzio/mezzio-fastroute"
            ]
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        },
        "patches": {
            "laminas/laminas-validator": {
                "Supported PSR-7 in File\\Count validator": "./patches/validator.patch",
                "Supported URI and Hostname multiple validator": "./patches/validator_uri.patch"
            }
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:fphgov/module-arcgis-api.git"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "beberlei/doctrineextensions": "^1.3",
        "cweagans/composer-patches": "^1.7",
        "doctrine/annotations": "^1.13",
        "fphgov/module-arcgis-api": ">=1.1.2",
        "laminas/laminas-component-installer": "^2.4",
        "laminas/laminas-config-aggregator": "^1.5",
        "laminas/laminas-db": "^2.12",
        "laminas/laminas-diactoros": "^2.5.1",
        "laminas/laminas-hydrator": "^4.1",
        "laminas/laminas-i18n": "^2.11.1",
        "laminas/laminas-inputfilter": "^2.12.0",
        "laminas/laminas-log": "^2.13.1",
        "laminas/laminas-mail": "^2.14.0",
        "laminas/laminas-servicemanager": "^3.8",
        "laminas/laminas-stdlib": "^3.2.1",
        "laminas/laminas-uri": "^2.9",
        "lcobucci/jwt": "^4.0",
        "mezzio/mezzio": "^3.2.1",
        "mezzio/mezzio-authentication": "1.3.x-dev",
        "mezzio/mezzio-authorization-acl": "^1.1",
        "mezzio/mezzio-cors": "1.1.x-dev",
        "mezzio/mezzio-fastroute": "^3.0.3",
        "mezzio/mezzio-hal": "^2.0",
        "mezzio/mezzio-helpers": "^5.5.1",
        "mezzio/mezzio-laminasviewrenderer": "^2.2",
        "middlewares/recaptcha": "^2.0",
        "phpoffice/phpspreadsheet": "^1.17.1",
        "ramsey/uuid": "^4.1.1",
        "ramsey/uuid-doctrine": "^1.6",
        "roave/psr-container-doctrine": "^2.2",
        "symfony/property-access": "^5.3",
        "symfony/serializer": "^5.3",
        "tuupola/cors-middleware": "dev-master",
        "tuupola/slim-jwt-auth": "3.x-dev",
        "vlucas/phpdotenv": "^5.0@dev"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "guzzlehttp/guzzle": "^7.3",
        "laminas/laminas-coding-standard": "2.1.x",
        "laminas/laminas-development-mode": "^3.3",
        "mezzio/mezzio-tooling": "^1.3",
        "phpspec/prophecy-phpunit": "^2.0.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.85",
        "phpstan/phpstan-doctrine": "^0.12.33",
        "phpunit/phpunit": "^9.5.9",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/src",
            "Jwt\\": "src/Jwt/src/",
            "Mail\\": "src/Mail/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/",
            "DoctrineFixture\\": "test/DoctrineFixture/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "mezzio": "mezzio --ansi",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse -l 6 src",
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "db-update": "vendor/bin/doctrine orm:schema-tool:update --force"
    }
}
